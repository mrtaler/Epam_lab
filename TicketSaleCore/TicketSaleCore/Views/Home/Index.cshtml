@using TicketSaleCore.Models
@model  IEnumerable<TicketSaleCore.ViewModels.HomeViewModels.EventsHomeViewModel>
@{
    ViewData["Title"] = "Event Home";
}
<div class="item">
    
    @if (User.Identity.IsAuthenticated)
    {
        if (User.IsInRole("admin"))
        {
            <a>Admin is work</a>
        }
    }
    else
    {

    }

    @foreach (var item in Model)
    {
        @*@Html.ActionLink("item.Name", "IndexTickedForEvent","Tickets",new {id=@item.Id})*@
        <div class="ui icon message">
            <img class="ui avatar image" src="@item.Banner" style="height: 60px;width: 60px" />
            <div class="content">
                <div class="header">
                    <a class="header" asp-controller="Tickets" asp-action="Index" asp-route-id="@item.Id">@item.Name</a>
                </div>
                <div class="description">@item.Description</div>
                <p>@item.Date.ToString("MMMM dd yyyy")</p>
                <p>@item.Venue.City.Name</p>
                <p>@item.Venue.Address</p>
            </div>
            <div class="text right">available tikets:<b>@item.AvailableTicket</b></div>
        </div>
    }
</div>
    