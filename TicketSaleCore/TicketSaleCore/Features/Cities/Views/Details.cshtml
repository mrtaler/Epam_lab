@model TicketSaleCore.Models.Entities.City
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Details"];
}

<h2>@Localizer["Details"]</h2>

<div class="content">
    <h2>
        @Localizer["City Name"] : @Html.DisplayFor(model => model.Name)
    </h2>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">@Localizer["Edit"]</a> |
    <a asp-action="Index">@Localizer["Back to List"]</a>
</div>
