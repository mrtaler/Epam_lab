@model TicketSaleCore.Models.Entities.City
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Delete"];
}

<h3>@Localizer["Are you sure you want to delete this?"]</h3>

    <div class="content">
        <h2>
            @Localizer["City Name"] : @Html.DisplayFor(model => model.Name)
        </h2>
    </div>



<form asp-action="Delete"
      asp-controller="Cities"
      method="post"
      asp-route-id="@Model.Id"
      class="ui form">
    <div class="ui blue submit button">@Localizer["Delete"]</div> |
    <a class="ui blue button" asp-action="Index">@Localizer["Back to List"]</a>
</form>
@Html.ModelStateValidMsge(ViewData.ModelState, Localizer)
<script type="text/javascript">
    $('.ui.form')
        .form();
</script>
